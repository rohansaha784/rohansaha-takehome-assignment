module LoanExtended.ApprovalWithLimit where
import DA.Time       -- for Date
import DA.Text       -- for Text

-- 1. Token template (UTXO-style)
template Token
  with
    issuer    : Party
    owner     : Party
    amount    : Decimal
    currency  : Text
  where
    signatory issuer
    observer  owner

-- 2. LoanLimit template
template LoanLimit
  with
    bank       : Party
    limitAmt   : Decimal
    currency   : Text
  where
    signatory bank